<style>
    /* Chat Butonu */
    #chat-circle {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background: #0d6efd;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        color: white;
        padding: 15px;
        cursor: pointer;
        box-shadow: 0px 3px 10px rgba(0,0,0,0.2);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s;
    }

        #chat-circle:hover {
            transform: scale(1.1);
        }

    /* Ana Pencere */
    .chat-box {
        display: none;
        position: fixed;
        bottom: 100px;
        right: 30px;
        width: 380px; 
        max-width: 90%;
        height: 550px; 
        background: white;
        border-radius: 15px;
        box-shadow: 0px 5px 20px rgba(0,0,0,0.2);
        z-index: 9999;
        flex-direction: column;
        overflow: hidden;
        border: 1px solid #ddd;
    }

    .chat-box-header {
        background: #0d6efd;
        color: white;
        padding: 15px;
        font-weight: bold;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-box-body {
        flex: 1;
        padding: 15px;
        overflow-y: auto;
        background: #f8f9fa;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .chat-msg {
        padding: 10px 15px;
        border-radius: 15px;
        max-width: 85%;
        font-size: 0.9rem;
        word-wrap: break-word;
    }

    .chat-msg-user {
        background: #0d6efd;
        color: white;
        align-self: flex-end;
        border-bottom-right-radius: 2px;
    }

    .chat-msg-ai {
        background: #e9ecef;
        color: #333;
        align-self: flex-start;
        border-bottom-left-radius: 2px;
    }

    .user-stats-panel {
        background: #f1f3f5;
        padding: 10px;
        border-top: 1px solid #dee2e6;
        font-size: 0.85rem;
    }

    .chat-box-footer {
        padding: 10px;
        background: white;
        border-top: 1px solid #ddd;
        display: flex;
        gap: 5px;
    }
</style>

<div id="chat-circle" onclick="toggleChat()">
    <i class="bi bi-chat-dots-fill" style="font-size: 2rem;"></i>
</div>

<div class="chat-box" id="chat-box">
    <div class="chat-box-header">
        <span><i class="bi bi-robot"></i> FitLife Koç</span>
        <span style="cursor:pointer;" onclick="toggleChat()">✖</span>
    </div>

    <div class="chat-box-body" id="chat-logs">
        <div class="chat-msg chat-msg-ai">
            Merhaba! Ben kişisel yapay zeka antrenörün. 💪<br>
            Sana özel program hazırlamam için aşağıdan bilgilerini girebilirsin.
        </div>
    </div>

    <div class="user-stats-panel">
        <div class="d-flex justify-content-between mb-1">
            <strong>Kişisel Bilgilerin:</strong>
            <small class="text-primary" style="cursor:pointer" onclick="$('#statsForm').slideToggle()">Gizle/Göster</small>
        </div>
        <div id="statsForm" class="row g-2">
            <div class="col-4">
                <input type="number" id="uAge" class="form-control form-control-sm" placeholder="Yaş">
            </div>
            <div class="col-4">
                <input type="number" id="uHeight" class="form-control form-control-sm" placeholder="Boy(cm)">
            </div>
            <div class="col-4">
                <input type="number" id="uWeight" class="form-control form-control-sm" placeholder="Kilo(kg)">
            </div>
            <div class="col-12">
                <select id="uGoal" class="form-select form-select-sm">
                    <option value="">Hedef Seç...</option>
                    <option value="Kilo Vermek">Kilo Vermek (Yağ Yakımı)</option>
                    <option value="Kas Yapmak">Kas Kütlesi Artırmak</option>
                    <option value="Sıkılaşmak">Fit ve Sıkı Olmak</option>
                </select>
            </div>
        </div>
    </div>

    <div class="chat-box-footer">
        <input type="text" id="chat-input" class="form-control" placeholder="Örn: Bana bir diyet yaz..." onkeypress="handleEnter(event)">
        <button class="btn btn-primary" onclick="sendMessage()"><i class="bi bi-send-fill"></i></button>
    </div>
</div>

<script>
    function toggleChat() {
        var chatBox = document.getElementById("chat-box");
        if (chatBox.style.display === "none" || chatBox.style.display === "") {
            chatBox.style.display = "flex";
        } else {
            chatBox.style.display = "none";
        }
    }

    function handleEnter(e) {
        if (e.key === "Enter") sendMessage();
    }

    async function sendMessage() {
        var input = document.getElementById("chat-input");
        var msg = input.value.trim();

        // Inputlardan verileri al
        var age = document.getElementById("uAge").value;
        var height = document.getElementById("uHeight").value;
        var weight = document.getElementById("uWeight").value;
        var goal = document.getElementById("uGoal").value;

        if (msg === "") return;

        // Ekrana bas
        var logs = document.getElementById("chat-logs");
        logs.innerHTML += `<div class="chat-msg chat-msg-user">${msg}</div>`;
        input.value = "";
        logs.scrollTop = logs.scrollHeight;

        // Yükleniyor efekti
        var loadingId = "loading-" + Date.now();
        logs.innerHTML += `<div id="${loadingId}" class="chat-msg chat-msg-ai"><i><span class="spinner-grow spinner-grow-sm"></span> Düşünüyorum...</i></div>`;
        logs.scrollTop = logs.scrollHeight;

        try {
            // Backend'e tüm veriyi gönder
            let response = await fetch('/AI/Chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    message: msg,
                    age: age,
                    height: height,
                    weight: weight,
                    goal: goal
                })
            });

            if (!response.ok) throw new Error("Hata");

            let data = await response.json();
            document.getElementById(loadingId).remove();

            // Cevabı Markdown benzeri formattan HTML'e 
            let formattedReply = data.reply.replace(/\n/g, "<br>");
            logs.innerHTML += `<div class="chat-msg chat-msg-ai">${formattedReply}</div>`;

        } catch (err) {
            document.getElementById(loadingId).remove();
            logs.innerHTML += `<div class="chat-msg chat-msg-ai text-danger">Bağlantı hatası.</div>`;
        }
        logs.scrollTop = logs.scrollHeight;
    }
</script>