<style>
    /* Chat Butonu */
    #chat-circle {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background: #fd7e14; 
        width: 60px;
        height: 60px;
        border-radius: 50%;
        color: white;
        padding: 15px;
        cursor: pointer;
        box-shadow: 0px 3px 10px rgba(0,0,0,0.2);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s;
    }

        #chat-circle:hover {
            transform: scale(1.1);
        }

    .chat-box {
        display: none;
        position: fixed;
        bottom: 100px;
        right: 30px;
        width: 500px;
        height: 700px;
        max-width: 90%;
        max-height: 85vh;
        background: white;
        border-radius: 15px;
        box-shadow: 0px 5px 20px rgba(0,0,0,0.2);
        z-index: 9999;
        flex-direction: column;
        overflow: hidden;
        border: 1px solid #ddd;
    }


    .chat-box-header {
        background: linear-gradient(135deg, #fd7e14, #ffc107); /* Turuncu Gradyan */
        color: white;
        padding: 15px;
        font-weight: bold;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-box-body {
        flex: 1;
        padding: 15px;
        overflow-y: auto;
        background: #fff8f0; /* Açık Krem */
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .chat-msg {
        padding: 10px 15px;
        border-radius: 15px;
        max-width: 85%;
        font-size: 0.9rem;
        word-wrap: break-word;
    }

    .chat-msg-user {
        background: #fd7e14;
        color: white;
        align-self: flex-end;
        border-bottom-right-radius: 2px;
    }

    .chat-msg-ai {
        background: white;
        border: 1px solid #dee2e6;
        color: #333;
        align-self: flex-start;
        border-bottom-left-radius: 2px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .user-stats-panel {
        background: #fff;
        padding: 10px;
        border-top: 1px solid #dee2e6;
        font-size: 0.85rem;
    }

    .chat-box-footer {
        padding: 10px;
        background: white;
        border-top: 1px solid #ddd;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    #image-preview-area {
        display: none;
        padding: 5px 10px;
        background: #f1f3f5;
        border-top: 1px solid #ddd;
        text-align: right;
    }

    #preview-img {
        height: 50px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>

<div id="chat-circle" onclick="toggleChat()">
    <i class="bi bi-chat-dots-fill" style="font-size: 2rem;"></i>
</div>

<div class="chat-box" id="chat-box">
    <div class="chat-box-header">
        <span><i class="bi bi-robot"></i> FitLife Koç</span>
        <div>
            <i class="bi bi-trash3-fill me-3" style="cursor:pointer;" onclick="confirmClearHistory()" title="Sohbeti ve Verileri Sıfırla"></i>

            <span style="cursor:pointer;" onclick="toggleChat()">✖</span>
        </div>
    </div>

    <div class="chat-box-body" id="chat-logs">
        <div class="chat-msg chat-msg-ai">
            Merhaba! Ben yeni nesil yapay zeka koçun. 🚀<br>
            Fotoğrafını atarsan analiz edebilirim veya 'beni çiz' dersen hayalindeki formu çizebilirim!
        </div>
    </div>

    <div class="user-stats-panel">
        <div class="d-flex justify-content-between mb-1">
            <strong>Profilin:</strong>
            <small class="text-primary" style="cursor:pointer" onclick="$('#statsForm').slideToggle()">Gizle/Göster</small>
        </div>
        <div id="statsForm" class="row g-2">
            <div class="col-4">
                <input type="number" id="uAge" class="form-control form-control-sm" placeholder="Yaş">
            </div>
            <div class="col-4">
                <input type="number" id="uHeight" class="form-control form-control-sm" placeholder="Boy(cm)">
            </div>
            <div class="col-4">
                <input type="number" id="uWeight" class="form-control form-control-sm" placeholder="Kilo(kg)">
            </div>
            <div class="col-12">
                <select id="uGoal" class="form-select form-select-sm">
                    <option value="">Hedef Seç...</option>
                    <option value="Kilo Vermek">Kilo Vermek (Yağ Yakımı)</option>
                    <option value="Kas Yapmak">Kas Kütlesi Artırmak</option>
                    <option value="Sıkılaşmak">Fit ve Sıkı Olmak</option>
                </select>
            </div>
        </div>
    </div>

    <div id="image-preview-area">
        <span class="small text-muted me-2">Gönderilecek Foto:</span>
        <img id="preview-img" src="" alt="Önizleme" />
        <button class="btn btn-sm btn-danger ms-2" onclick="clearImageSelection()">X</button>
    </div>

    <div class="chat-box-footer">
        <input type="file" id="imageInput" accept="image/*" style="display:none;" onchange="handleImageSelect(this)" />

        <button class="btn btn-secondary" onclick="document.getElementById('imageInput').click()" title="Fotoğraf Ekle">
            <i class="bi bi-camera-fill"></i>
        </button>

        <input type="text" id="chat-input" class="form-control" placeholder="Mesajınız..." onkeypress="handleEnter(event)">
        <button class="btn btn-warning text-white" onclick="sendMessage()"><i class="bi bi-send-fill"></i></button>
    </div>
</div>

<script>
    // Global değişkenler
    let selectedBase64 = null;

    document.addEventListener("DOMContentLoaded", function() {
        // Sohbeti geri yükle
        loadChatHistory();

        // Profil bilgilerini geri yükle
        loadUserProfile();

        // Profil inputlarına "değişiklik izleyici" ekle
        // Kullanıcı bir harf bile yazsa/değiştirse anında hafızaya kaydedilecek.
        const inputIds = ["uAge", "uHeight", "uWeight", "uGoal"];
        inputIds.forEach(id => {
            document.getElementById(id).addEventListener("input", saveUserProfile);
            document.getElementById(id).addEventListener("change", saveUserProfile); // Selectbox için
        });
    });

    function toggleChat() {
        var chatBox = document.getElementById("chat-box");
        if (chatBox.style.display === "none" || chatBox.style.display === "") {
            chatBox.style.display = "flex";
            var logs = document.getElementById("chat-logs");
            logs.scrollTop = logs.scrollHeight;
        } else {
            chatBox.style.display = "none";
        }
    }

    function handleEnter(e) {
        if (e.key === "Enter") sendMessage();
    }

    function handleImageSelect(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('preview-img').src = e.target.result;
                document.getElementById('image-preview-area').style.display = 'block';
                selectedBase64 = e.target.result.split(',')[1];
            };
            reader.readAsDataURL(input.files[0]);
        }
    }

    function clearImageSelection() {
        document.getElementById('imageInput').value = "";
        selectedBase64 = null;
        document.getElementById('image-preview-area').style.display = 'none';
    }

    

    // Sohbeti Kaydet
    function saveChatHistory() {
        var logs = document.getElementById("chat-logs");
        localStorage.setItem("fitLifeChatHistory", logs.innerHTML);
    }

    // Profili Kaydet 
    function saveUserProfile() {
        var profileData = {
            age: document.getElementById("uAge").value,
            height: document.getElementById("uHeight").value,
            weight: document.getElementById("uWeight").value,
            goal: document.getElementById("uGoal").value
        };
        localStorage.setItem("fitLifeUserProfile", JSON.stringify(profileData));
    }

   

    // Sohbeti Yükle
    function loadChatHistory() {
        var history = localStorage.getItem("fitLifeChatHistory");
        if (history) {
            var logs = document.getElementById("chat-logs");
            logs.innerHTML = history;
            logs.scrollTop = logs.scrollHeight;
        }
    }

    // Profili Yükle 
    function loadUserProfile() {
        var savedProfile = localStorage.getItem("fitLifeUserProfile");
        if (savedProfile) {
            var profileData = JSON.parse(savedProfile);
            if (profileData) {
                document.getElementById("uAge").value = profileData.age || "";
                document.getElementById("uHeight").value = profileData.height || "";
                document.getElementById("uWeight").value = profileData.weight || "";
                document.getElementById("uGoal").value = profileData.goal || "";
            }
        }
    }

   
    function confirmClearHistory() {
        if (confirm("Tüm sohbet geçmişin ve profil bilgilerin silinecek. Emin misin?")) {
            // LocalStorage'ı Temizle
            localStorage.removeItem("fitLifeChatHistory");
            localStorage.removeItem("fitLifeUserProfile");

            // Sohbet Ekranını Sıfırla
            document.getElementById("chat-logs").innerHTML = `
                <div class="chat-msg chat-msg-ai">
                    Merhaba! Ben yeni nesil yapay zeka koçun. 🚀<br>
                    Fotoğrafını atarsan analiz edebilirim veya 'beni çiz' dersen hayalindeki formu çizebilirim!
                </div>`;

            // Profil Inputlarını Sıfırla
            document.getElementById("uAge").value = "";
            document.getElementById("uHeight").value = "";
            document.getElementById("uWeight").value = "";
            document.getElementById("uGoal").value = "";

            // Seçili Resim Varsa Kaldır
            clearImageSelection();
        }
    }
</script>