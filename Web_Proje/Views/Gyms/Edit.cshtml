@model Web_Proje.Models.Gym

@{
    ViewData["Title"] = "Salonu Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-pencil-square"></i> Salon Bilgilerini Düzenle
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-secondary">
                                <i class="bi bi-card-heading"></i> Salon Adı
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-bold text-secondary">
                                <i class="bi bi-geo-alt-fill"></i> Açık Adres
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="OpeningHour" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-clock"></i> Açılış Saati
                                </label>
                                <input asp-for="OpeningHour" type="time" class="form-control" />
                                <span asp-validation-for="OpeningHour" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ClosingTime" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-clock-history"></i> Kapanış Saati
                                </label>
                                <input asp-for="ClosingTime" type="time" class="form-control" />
                                <span asp-validation-for="ClosingTime" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Vazgeç
                            </a>
                            <button type="submit" class="btn btn-warning fw-bold px-4 shadow-sm">
                                <i class="bi bi-save"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}