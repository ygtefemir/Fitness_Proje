@model IEnumerable<Web_Proje.Models.Gym>

@{
    ViewData["Title"] = "Salonlar";
}

<div class="page-header text-center">
    <h2><i class="bi bi-building"></i> Spor Salonlarımız</h2>
    <p>Size en yakın ve en uygun salonu seçin</p>
</div>

<div class="container">
    @if (User.IsInRole("Admin"))
    {<div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Yeni Salon Ekle</a>
    </div>}

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 hover-card shadow-sm">
                    <img src="https://placehold.co/600x400/258cfb/FFF?text=@item.Name" class="card-img-top" alt="...">

                    <div class="card-body">
                        <h5 class="card-title fw-bold text-primary">@item.Name</h5>
                        <p class="card-text text-muted">
                            <i class="bi bi-geo-alt-fill text-danger"></i> @item.Address
                        </p>

                        <div class="mb-3">
                            @{
                                // Salonun hocaları -> Hocaların hizmetleri -> Hizmet isimleri -> Tekrar edenleri sil
                                var services = item.Trainers?
                                .SelectMany(t => t.TrainerServices)
                                .Select(ts => ts.service.Name)
                                .Distinct()
                                .ToList();
                            }

                            @if (services != null && services.Any())
                            {
                                // Varsa listele (Badge stili)
                                foreach (var s in services)
                                {
                                    <span class="badge bg-light text-primary border border-primary mb-1">@s</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-light text-secondary border">Hizmet bilgisi yok</span>
                            }
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-secondary">
                                <i class="bi bi-clock"></i> @item.OpeningHour - @item.ClosingTime
                            </small>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between pb-3">
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>