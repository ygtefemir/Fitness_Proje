@model IEnumerable<Web_Proje.Models.TrainerApiDto>
@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="page-header text-center" style="background: linear-gradient(135deg, #6610f2, #6f42c1);">
    <h2><i class="bi bi-people-fill"></i> Eğitmen Kadromuz</h2>
    <p>Alanında uzman profesyonellerle çalışın</p>
</div>

<div class="container">
    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus"></i> Yeni Eğitmen Ekle</a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 hover-card shadow-sm">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <img src="https://ui-avatars.com/api/?name=@item.Name&background=random&size=100" class="rounded-circle shadow" alt="@item.Name">
                        </div>

                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="text-primary mb-1">@item.Specialty</p>

                        <div class="small text-muted mb-3">
                            <i class="bi bi-clock"></i> @item.ShiftStart - @item.ShiftEnd
                        </div>

                        <div class="mb-3">
                            @if (item.Services != null)
                            {
                                @foreach (var service in item.Services)
                                {
                                    <span class="badge bg-light text-dark border me-1">@service</span>
                                }
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-white d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Profil</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>