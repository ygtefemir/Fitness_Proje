@model IEnumerable<Web_Proje.Models.TrainerApiDto>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people-fill"></i> Eğitmen Yönetimi</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Yeni Eğitmen
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover mb-0 bg-white align-middle">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Eğitmen Adı</th>
                    <th>Branş</th>
                    <th>Salon</th>
                    <th>Mesai Saatleri</th>
                    <th>Verdiği Hizmetler</th>
                    <th style="width: 180px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">
                            <i class="bi bi-info-circle"></i> Henüz kayıtlı eğitmen bulunmamaktadır.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>

                            <td>@item.Specialty</td>

                            <td>
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-geo-alt-fill text-danger"></i> Salon #@item.GymId
                                </span>
                            </td>

                            <td>
                                <small class="text-muted fw-bold">
                                    <i class="bi bi-clock"></i>
                                    @item.ShiftStart.ToString(@"hh\:mm") - @item.ShiftEnd.ToString(@"hh\:mm")
                                </small>
                            </td>

                            <td>
                                @if (item.Services != null && item.Services.Any())
                                {
                                    @foreach (var serviceName in item.Services)
                                    {
                                        <span class="badge bg-secondary me-1">@serviceName</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic">Hizmet Yok</span>
                                }
                            </td>

                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Appointments" asp-action="Index" asp-route-trainerId="@item.Id"
                                       class="btn btn-info text-white" title="Randevularını Gör">
                                        <i class="bi bi-calendar-week"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Düzenle">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu eğitmeni silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>