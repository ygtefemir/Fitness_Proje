@model Web_Proje.Models.ViewModels.TrainerViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trainer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialty" class="control-label"></label>
                <input asp-for="Specialty" class="form-control" />
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="GymId" class="control-label fw-bold">Çalıştığı Salon</label>

                <select asp-for="GymId" class="form-control form-select" asp-items="ViewBag.GymId">
                    <option value="">-- Bir Spor Salonu Seçin --</option>
                </select>

                <span asp-validation-for="GymId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftStart" class="control-label"></label>
                <input asp-for="ShiftStart" class="form-control" />
                <span asp-validation-for="ShiftStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftEnd" class="control-label"></label>
                <input asp-for="ShiftEnd" class="form-control" />
                <span asp-validation-for="ShiftEnd" class="text-danger"></span>
            </div>
            <div class="card mb-3">
                <div class="card-header bg-light fw-bold">
                    Hizmetler / Dersler
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var item in Model.Services)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="selectedServices"
                                           value="@item.ServiceId"
                                           id="service_@item.ServiceId">

                                    <label class="form-check-label" for="service_@item.ServiceId">
                                        @item.ServiceName
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
