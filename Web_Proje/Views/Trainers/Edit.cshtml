@model Web_Proje.Models.TrainerApiDto

@{
    ViewData["Title"] = "Eğitmen Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Eğitmen Düzenle</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Eğitmen Adı</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GymId" class="form-label fw-bold">Bağlı Olduğu Salon</label>
                            <select asp-for="GymId" class="form-select" asp-items="ViewBag.GymList" required>
                                <option value="">-- Salon Seçiniz --</option>
                            </select>
                            <span asp-validation-for="GymId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialty" class="form-label fw-bold">Uzmanlık Alanı</label>
                            <input asp-for="Specialty" class="form-control" required />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold d-block">Verdiği Hizmetler</label>
                            <div class="card bg-light border-0">
                                <div class="card-body p-3" style="max-height: 200px; overflow-y: auto;">
                                    @if (ViewBag.AllServices != null)
                                    {
                                        foreach (var service in (List<Web_Proje.Models.Services>)ViewBag.AllServices)
                                        {
                                            // Checkbox işaretli mi kontrolü
                                            bool isChecked = Model.ServiceIds != null && Model.ServiceIds.Contains(service.Id);

                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" name="ServiceIds"
                                                       value="@service.Id" id="srv_@service.Id"
                                                       @(isChecked ? "checked" : "")>
                                                <label class="form-check-label" for="srv_@service.Id">
                                                    @service.Name
                                                </label>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <div class="form-text text-muted">Eğitmenin verdiği dersleri güncelleyebilirsiniz.</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ShiftStart" class="form-label fw-bold">Mesai Başlangıç</label>
                                <input asp-for="ShiftStart" type="time" class="form-control" required />
                                <span asp-validation-for="ShiftStart" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ShiftEnd" class="form-label fw-bold">Mesai Bitiş</label>
                                <input asp-for="ShiftEnd" type="time" class="form-control" required />
                                <span asp-validation-for="ShiftEnd" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Güncelle
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Listeye Dön
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>