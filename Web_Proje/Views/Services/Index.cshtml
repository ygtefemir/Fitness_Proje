@model IEnumerable<Web_Proje.Models.Services>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="page-header text-center" style="background: linear-gradient(135deg, #198754, #20c997);">
    <h2><i class="bi bi-activity"></i> Hizmetlerimiz</h2>
    <p>Hedefinize uygun antrenman programını seçin</p>
</div>

<div class="container">
    @if (User.IsInRole("Admin"))
    { <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle</a>
    </div>}

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 hover-card shadow-sm border-success">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-lightning-charge-fill text-warning" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-text text-muted">Profesyonel eğitmenler eşliğinde.</p>

                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <span class="badge bg-secondary rounded-pill">
                                <i class="bi bi-stopwatch"></i> @item.DurationMin Dk
                            </span>
                            <span class="badge bg-success rounded-pill">
                                <i class="bi bi-tag-fill"></i> @item.Price TL
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 text-center pb-3">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>