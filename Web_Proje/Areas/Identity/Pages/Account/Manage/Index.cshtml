@page
@model IndexModel
@{
    ViewData["Title"] = "Profil Bilgileri";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="mb-4 text-primary"><i class="bi bi-person-vcard"></i> @ViewData["Title"]</h4>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label">Email Adresi</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Adınız" />
                <label asp-for="Input.FirstName" class="form-label">İsim</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Soyadınız" />
                <label asp-for="Input.LastName" class="form-label">Soyisim</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="555-000-0000" />
                <label asp-for="Input.PhoneNumber" class="form-label">Telefon Numarası</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg w-100 mt-3">
                <i class="bi bi-save"></i> Değişiklikleri Kaydet
            </button>
        </form>
    </div>

    <div class="col-md-4 d-none d-md-flex justify-content-center align-items-center">
        <i class="bi bi-person-bounding-box text-muted" style="font-size: 8rem; opacity:0.2;"></i>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}