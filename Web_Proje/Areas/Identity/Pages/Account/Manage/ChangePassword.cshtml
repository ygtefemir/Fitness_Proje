@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="mb-4 text-primary"><i class="bi bi-shield-lock"></i> @ViewData["Title"]</h4>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-12">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Eski şifreniz" />
                <label asp-for="Input.OldPassword" class="form-label">Mevcut Şifre</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yeni şifreniz" />
                <label asp-for="Input.NewPassword" class="form-label">Yeni Şifre</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yeni şifre tekrar" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning btn-lg w-100 mt-3 text-white">
                <i class="bi bi-arrow-repeat"></i> Şifreyi Güncelle
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}