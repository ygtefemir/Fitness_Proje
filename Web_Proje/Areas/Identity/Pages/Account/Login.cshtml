@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg hover-card" style="border-radius: 20px; overflow: hidden;">
                <div class="card-header text-center text-white py-4" style="background: linear-gradient(135deg, #fd7e14, #ffc107);">
                    <h3 class="fw-bold mb-0"><i class="bi bi-box-arrow-in-right"></i> Üye Girişi</h3>
                    <p class="mb-0 text-white-50">Hesabınıza erişin</p>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">
                    <form id="account" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-pill" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="ps-4">Email Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger ms-3 small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-pill" placeholder="Şifre" />
                            <label asp-for="Input.Password" class="ps-4">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger ms-3 small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="Input.RememberMe" class="form-check-input" />
                                <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-warning small fw-bold">Şifremi Unuttum?</a>
                        </div>

                        <div class="d-grid mb-3">
                            <button id="login-submit" type="submit" class="btn btn-warning btn-lg text-white rounded-pill shadow-sm fw-bold">
                                Giriş Yap
                            </button>
                        </div>

                        <div class="text-center">
                            <span class="text-muted">Hesabın yok mu?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold text-primary">Hemen Kayıt Ol</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="/" class="text-muted text-decoration-none small"><i class="bi bi-arrow-left"></i> Ana Sayfaya Dön</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}